@model HistoryViewModel

<div class="header">
    <h1>History for @Model.Name</h1>
    <h3>Current Balance: @Model.Balance.ToString("C")</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var thing in Model.Histories)
                {
                    <tr>
                        <td>@thing.Name</td>
                        <td style="text-align: center; vertical-align: middle;">
                            @thing.Date.ToLongDateString()
                        </td>
                        <td tyle="text-align: center; vertical-align: middle;" >
                            @thing.Amount
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
